# focus window
hyper - left  : yabai -m window --focus west  || yabai -m window --focus east
hyper - down  : yabai -m window --focus south || yabai -m window --focus north
hyper - up    : yabai -m window --focus north || yabai -m window --focus south
hyper - right : yabai -m window --focus east  || yabai -m window --focus west

# swap windows
cmd + ctrl - h : yabai -m window --swap west  || yabai -m window --swap east
cmd + ctrl - j : yabai -m window --swap south || yabai -m window --swap north
cmd + ctrl - k : yabai -m window --swap north || yabai -m window --swap south
cmd + ctrl - l : yabai -m window --swap east  || yabai -m window --swap west

# rotate windows
cmd + ctrl - 0x2B : yabai -m space --rotate 90
cmd + ctrl - 0x2F : yabai -m space --rotate 270

# resize windows
hyper - a : yabai -m window --resize right:-96:0
hyper - z : yabai -m window --resize right:96:0
hyper - s : yabai -m window --resize left:-96:0
hyper - x : yabai -m window --resize left:96:0
hyper - b : yabai -m space --balance

# toggle window state
hyper - f : yabai -m window --toggle zoom-fullscreen
hyper - t : yabai -m window --toggle float
hyper - r : yabai -m window --toggle split

# fast focus desktop
cmd - escape : yabai -m space --focus recent
hyper - 1 : yabai -m space --focus 1
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4

# send window to desktop
cmd + ctrl - 1 : yabai -m window --space 1
cmd + ctrl - 2 : yabai -m window --space 2
cmd + ctrl - 3 : yabai -m window --space 3
cmd + ctrl - 4 : yabai -m window --space 4
