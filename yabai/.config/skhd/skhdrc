# swap managed window
cmd + ctrl - h : yabai -m window --swap west
cmd + ctrl - j : yabai -m window --swap south
cmd + ctrl - k : yabai -m window --swap north
cmd + ctrl - l : yabai -m window --swap east

# rotate windows
cmd + ctrl - 0x2B : yabai -m space --rotate 90
cmd + ctrl - 0x2F : yabai -m space --rotate 270

# balance size of windows
cmd + ctrl - b : yabai -m space --balance

# toggle window zoom
cmd + ctrl - g : yabai -m window --toggle zoom-fullscreen

# fast focus desktop
cmd - escape : yabai -m space --focus recent
cmd - 1 : yabai -m space --focus 1
cmd - 2 : yabai -m space --focus 2
cmd - 3 : yabai -m space --focus 3
cmd - 4 : yabai -m space --focus 4

# send window to desktop
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4

# make floating window fill screen
# shift + alt - up     : yabai -m window --grid 1:1:0:0:1:1

# make floating window fill left-half of screen
# shift + alt - left   : yabai -m window --grid 1:2:0:0:1:1

